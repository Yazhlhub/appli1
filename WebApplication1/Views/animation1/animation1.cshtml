        h1 {
            padding: 0 20px;
            margin: 0;
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100%;
            font-family: sans-serif;
            font-size: 10em;
            animation: animate 5s linear infinite;
            background-image: linear-gradient(to left,#0094ff,#4800ff,,#ff006e,#darkgreen);
            -webkit-background-clip:text;
            text-transform:uppercase;
        }

